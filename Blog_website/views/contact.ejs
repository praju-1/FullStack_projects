<%- include('partials/header'); -%>

<h1>Contact Us</h1>
<p>
    <%= contactcontent %>
</p>

<!-- Contact Form -->
<div style="max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <form action="/contact" method="post">
        <div class="form-group mb-3">
            <label for="name">Your Name</label>
            <input class="form-control" type="text" name="name" id="name" placeholder="Enter your name" required>
        </div>
        <div class="form-group mb-3">
            <label for="email">Your Email</label>
            <input class="form-control" type="email" name="email" id="email" placeholder="Enter your email" required>
        </div>
        <div class="form-group mb-3">
            <label for="message">Your Message</label>
            <textarea class="form-control" name="message" id="message" rows="5" placeholder="Enter your message" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
</div>

<%- include('partials/footer'); -%>
